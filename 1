#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n,i,j,k,a,b,c;
    
    printf("Enter the number: ");
    scanf("%d",&n);
    
    for(i=n;i>0;i--){
        for(j=n-i;j>0;j--){
            printf("  ");
        }
        for(k=i;k>0;k--){
            printf("*");
        }
        printf("\n");
    }
    for(a=0;a<n;a++){
        for(b=n-a-2;b>0;b--){
            printf("  ");
        }
        if(a<n-1){
            for(c=a+2;c>0;c--){
            printf("*");
        }
        }
        
        printf("\n");
    }

    return 0;
}
